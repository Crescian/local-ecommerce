generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // direct (5432) for migrations
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  role         String?   @db.VarChar(100)
  is_active    Boolean?
  created_at   DateTime? @db.Timestamp(6)
  updated_at   DateTime? @db.Timestamp(6)
}

model Markets {
  id         Int       @id @default(autoincrement())
  name       String?   @db.VarChar(255)
  barangay   String?   @db.VarChar(255)
  city       String?   @db.VarChar(255)
  province   String?   @db.VarChar(255)
  created_at DateTime? @db.Timestamp(6)
  updated_at DateTime? @db.Timestamp(6)
}

model Vendors {
  id          Int        @id @default(autoincrement())
  user_id     Int?
  market_id   Int?
  stall_name  String?    @db.VarChar(255)
  type        String?    @db.VarChar(255)
  is_verified Boolean?
  created_at  DateTime?  @db.Timestamp(6)
  updated_at  DateTime?  @db.Timestamp(6)
  description String?
  image_url   String?    @db.VarChar(255)
  Products    Products[]
}

model Products {
  id           Int       @id(map: "products_pkey") @default(autoincrement())
  vendor_id    Int?
  name         String?   @db.VarChar(255)
  description  String?
  unit         String?   @db.VarChar(255)
  price        Decimal?  @db.Decimal(8, 2)
  is_available Boolean?
  created_at   DateTime? @db.Timestamp(6)
  updated_at   DateTime? @db.Timestamp(6)
  image_url    String?   @db.VarChar(255)
  Vendors      Vendors?  @relation(fields: [vendor_id], references: [id], onDelete: Cascade, map: "vendor_id")
}
